{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src/",
    "paths": {
      "@assets/*": ["src/assets/*"], // Alias for assets
      "@views/*": ["src/views/*"], // Alias for views
      "@redux/*": ["src/redux/*"], // Alias for redux
      "@types/*": ["src/types/*"], // Alias for types
      "@colors/*": ["src/colors/*"], // Alias for colors
      "@constants/*": ["src/constant/*"], // Alias for constants
      "@components/*": ["src/components/*"] // Alias for components
    }
  },
  "include": ["src/"],
  "exclude": ["node_modules"]
}
